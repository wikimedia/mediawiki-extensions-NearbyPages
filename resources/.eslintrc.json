{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/jquery",
		"wikimedia/mediawiki"
	],
	"env": {
		"commonjs": true
	},
	"rules": {
		"vue/html-self-closing": "off",
		"vue/v-on-style": "off",
		"vue/v-bind-style": "off",
		"jsdoc/no-undefined-types": "off",
		"mediawiki/msg-doc": "off",
		"mediawiki/valid-package-file-require": "off"
	}
}
