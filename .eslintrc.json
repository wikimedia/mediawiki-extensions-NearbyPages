{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/jquery",
		"wikimedia/mediawiki"
	],
	"env": {
		"browser": true,
		"commonjs": true
	},
	"rules": {
		"no-implicit-globals": "off",
		"vue/html-self-closing": "off",
		"mediawiki/msg-doc": "off",
		"mediawiki/valid-package-file-require": "off"
	},
	"globals": {
		"module": "readonly",
		"require": true
	}
}
