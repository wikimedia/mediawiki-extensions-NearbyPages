{
	"private": true,
	"scripts": {
		"precommit": "npm -s run test",
		"test:unit": "jest",
		"start": "node dev/build.js && parcel dev/index.html",
		"lint": "eslint --ext .json . && npm -s run lint:i18n && npm -s run lint:js && npm run lint:css",
		"lint:js": "eslint --cache --max-warnings 0 --report-unused-disable-directives \"**/*.{js,vue}\"",
		"lint:css": "stylelint '**/*.less'",
		"lint:i18n": "banana-checker --requireLowerCase=0 i18n/",
		"test": "npm -s run lint && npm run test:unit",
		"jsdoc": "jsdoc -c jsdoc.json",
		"doc": "npm run jsdoc"
	},
	"engines": {
		"node": "10.15.2"
	},
	"pre-commit": "precommit",
	"alias": {
		"mediawiki.router": "./dev/router.js",
		"vue": "./dev/vue.js",
		"$": "./dev/jquery.js"
	},
	"devDependencies": {
		"@vue/component-compiler-utils": "3.1.1",
		"@vue/test-utils": "1.0.3",
		"babel-core": "6.26.3",
		"eslint-config-wikimedia": "0.17.0",
		"grunt-banana-checker": "0.9.0",
		"jest": "24.9.0",
		"jquery": "3.5.1",
		"jsdoc": "3.6.3",
		"jsdoc-vue": "1.0.0",
		"less": "3.11.1",
		"mustache": "3.0.1",
		"oojs": "3.0.1",
		"oojs-router": "0.2.0",
		"parcel-bundler": "1.12.4",
		"pre-commit": "1.2.2",
		"stylelint": "13.8.0",
		"stylelint-config-wikimedia": "0.10.3",
		"vue": "2.6.11",
		"vue-hot-reload-api": "2.3.4",
		"vue-jest": "3.0.5",
		"vue-template-compiler": "2.6.11"
	}
}
